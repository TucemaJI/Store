@page
@model Store.Presentation.Areas.Admin.Pages.PrintingEditionsPageModel
@using static Store.Shared.Enums.Enums;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}
<h2>Printing Editions Management</h2>
<button><a asp-page="MainPage" asp-area="Admin">Main Page</a></button>
<button><a asp-page="EditPrintingEdition" asp-area="Admin">Add new Printing Edition</a></button>
<form method="post" name="filter">
    <input type="hidden" asp-for="PrintingEditionFilter.PageOptions.CurrentPage" />
    <input type="hidden" asp-for="PrintingEditionFilter.PageOptions.ItemsPerPage" />
    <input type="hidden" asp-for="PrintingEditionFilter.PageOptions.TotalItems" />
    <label>Order by:</label>
    <input type="submit" name="orderByString" value="Id" />
    <input type="submit" name="orderbyString" value="Price" />

    <label>Filter by</label>
    <select asp-for="PrintingEditionFilter.PrintingEditionTypeList" asp-items="Html.GetEnumSelectList<PrintingEditionType>()" onclick="filter.submit()">
        <option value="@PrintingEditionType.None">All</option>
        <option value="@PrintingEditionType.Book">Book</option>
        <option value="@PrintingEditionType.Journal">Journal</option>
        <option value="@PrintingEditionType.Newspaper">Newspaper</option>
    </select>
    <input type="checkbox" asp-for="PrintingEditionFilter.IsDescending" onchange="filter.submit()" /><label>Reverse</label>
</form>
<table class="table">
    <thead>
        <tr><th>ID</th><th>Name</th><th>Description</th><th>Category</th><th>Author</th><th>Price</th></tr>
    </thead>
    <tbody>
        @foreach (var printingEdition in Model.PrintingEditionList)
        {
            <tr>
                <td>@printingEdition.Id</td>
                <td>@printingEdition.Title</td>
                <td>@printingEdition.Description</td>
                <td>@printingEdition.Type</td>
                <td>
                    @foreach (var author in printingEdition.Authors)
                    {<ul>
                            <li>@author</li>
                        </ul>}
                </td>
                <td>@printingEdition.Price</td>
                <td>
                    <button><a asp-page-handler="Edit" asp-route-id="@printingEdition.Id" asp-page="EditPrintingEdition" asp-area="Admin">Edit</a></button>
                    <form method="post"><input type="submit" asp-page-handler="Delete" asp-route-id="@printingEdition.Id" value="Delete" /></form>
                </td>
            </tr>
        }
    </tbody>
</table>
<form method="post">
    <input type="hidden" asp-for="PrintingEditionFilter.PrintingEditionTypeList" />
    <input type="hidden" asp-for="PrintingEditionFilter.IsDescending" />
    <input type="hidden" asp-for="PrintingEditionFilter.PageOptions.CurrentPage" />
    <input type="hidden" asp-for="PrintingEditionFilter.PageOptions.ItemsPerPage" />
    <div>
        <input type="submit" disabled="@(!Model.PrintingEditionFilter.PageOptions.HasPrevious)" asp-route-pageIndex="@(Model.PrintingEditionFilter.PageOptions.CurrentPage -1)" value="Previous" />
    </div>
    <div>
        <input type="submit" disabled="@(!Model.PrintingEditionFilter.PageOptions.HasNext)" asp-route-pageIndex="@(Model.PrintingEditionFilter.PageOptions.CurrentPage +1)" value="Next" />
    </div>
</form>